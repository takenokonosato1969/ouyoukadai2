<% if current_user != user %>
  <% if current_user.following?(user) %>
    <td><%= link_to "フォロー外す", user_relationships_path(user), method: :delete, class: "btn btn-sm btn-danger", style: "white-space: nowrap;" %></td>
  <% else %>
    <td><%= link_to "フォローする", user_relationships_path(user), method: :post, class: "btn btn-sm btn-success", style: "white-space: nowrap;" %></td>
  <% end %>
<% else %>
  <td></td>
<% end %>
