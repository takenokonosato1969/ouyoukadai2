      <table>
        <tbody>
          <% book.book_comments.each do |book_comment| %>
            <tr>
              <td>
                <%= link_to user_path(book_comment.user.id) do %>
                <%= image_tag book_comment.user.get_profile_image, size: "100x100" %><br>
                <%= book_comment.user.name %>
              <% end %>
              </td>
              <td><%= book_comment.comment %></td>
              <td>
              <% if current_user = book_comment.user %>
                <%= link_to "Destroy", book_book_comment_path(book,book_comment), method: :delete, class: "btn btn-sm btn-danger pull-right" %>
              <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>